{
  "name": "@brown-ccv/disco-components",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "author": {
    "name": "Fernando Gelin",
    "email": "fernando_gelin@brown.edu"
  },
  "main": "dist/disco-components.ssr.js",
  "browser": "dist/disco-components.esm.js",
  "module": "dist/disco-components.esm.js",
  "unpkg": "dist/disco-components.min.js",
  "files": [
    "dist/*",
    "src/**/*.vue"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "test:unit": "vue-cli-service test:unit",
    "e2e": "vue-cli-service test:e2e --url http://localhost:6006/",
    "test:e2e": "start-server-and-test storybook:serve http://localhost:6006 e2e",
    "lint": "vue-cli-service lint",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife",
    "changelog": "semantic-release --generate-notes",
    "commit": "git-cz",
    "release": "semantic-release",
    "storybook:build": "vue-cli-service storybook:build -c config/storybook -s ./public",
    "storybook:serve": "vue-cli-service storybook:serve -p 6006 -c config/storybook -s ./public",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "@brown-ccv/disco-styles": "^1.0.0",
    "bulma": "^0.8.2",
    "vue-bulma": "0.0.35",
    "vue-svg-loader": "^0.16.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@rollup/plugin-alias": "^2.2.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.2",
    "@storybook/addon-actions": ">=5.3.0",
    "@storybook/addon-docs": ">=5.3.0",
    "@storybook/addon-knobs": ">=5.3.0",
    "@storybook/addon-links": ">=5.3.0",
    "@storybook/addon-notes": ">=5.3.0",
    "@storybook/vue": ">=5.3.0",
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-plugin-e2e-nightwatch": "^4.3.0",
    "@vue/cli-plugin-eslint": "^4.3.0",
    "@vue/cli-plugin-router": "^4.3.0",
    "@vue/cli-plugin-unit-jest": "^4.3.0",
    "@vue/cli-plugin-vuex": "^4.3.0",
    "@vue/cli-service": "^4.3.1",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/test-utils": "1.0.0-beta.31",
    "babel-eslint": "^10.1.0",
    "chromedriver": "81",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^6.2.2",
    "firebase-tools": "^8.3.0",
    "geckodriver": "^1.19.1",
    "git-cz": "^4.3.1",
    "lint-staged": "^9.5.0",
    "minimist": "^1.2.5",
    "prettier": "^1.19.1",
    "rollup": "^2.7.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-vue": "^5.1.6",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "semantic-release": "^17.0.7",
    "start-server-and-test": "^1.11.0",
    "vue": "^2.6.11",
    "vue-cli-plugin-cz": "^1.2.2",
    "vue-cli-plugin-storybook": "^1.2.2",
    "vue-template-compiler": "^2.6.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "peerDependencies": {
    "vue": "^2.6.11"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
